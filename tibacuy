    <div id="copy-notification">Comando copiado al portapapeles</div>

    <script>
        // Inicializar Highlight.js para el resaltado de sintaxis en bloques de código
        hljs.highlightAll();

        // Lógica para la notificación de copiado y Alpine.js
        document.addEventListener('alpine:init', () => {
            Alpine.data('interactiveTerminal', () => ({
                copyToClipboard(text) {
                    if (navigator.clipboard && navigator.clipboard.writeText) {
                        navigator.clipboard.writeText(text).then(() => {
                            this.showCopyNotification('Comando copiado: ' + text.substring(0,30) + '...');
                        }).catch(err => {
                            console.error('Error al copiar con navigator.clipboard: ', err);
                            this.fallbackCopyToClipboard(text); // Intenta el método de fallback
                        });
                    } else {
                        this.fallbackCopyToClipboard(text); // Usa el fallback si navigator.clipboard no está disponible
                    }
                },
                fallbackCopyToClipboard(text) { // Método de fallback para copiar
                    const textArea = document.createElement('textarea');
                    textArea.value = text;
                    // Evitar que se vea el textarea
                    textArea.style.position = 'fixed';
                    textArea.style.top = '-9999px';
                    textArea.style.left = '-9999px';
                    document.body.appendChild(textArea);
                    textArea.focus();
                    textArea.select();
                    try {
                        const successful = document.execCommand('copy');
                        if (successful) {
                            this.showCopyNotification('Comando copiado (fallback): ' + text.substring(0,30) + '...');
                        } else {
                            this.showCopyNotification('Error al copiar el comando.', true);
                            console.error('Fallback: Error al ejecutar document.execCommand(\'copy\')');
                        }
                    } catch (err) {
                        this.showCopyNotification('Error al copiar el comando.', true);
                        console.error('Fallback: Excepción al copiar: ', err);
                    }
                    document.body.removeChild(textArea);
                },
                showCopyNotification(message, isError = false) {
                    const notification = document.getElementById('copy-notification');
                    if (notification) {
                        notification.textContent = message;
                        notification.style.backgroundColor = isError ? 'var(--color-warning)' : 'var(--color-dark)';
                        notification.classList.add('show');
                        setTimeout(() => {
                            notification.classList.remove('show');
                        }, 3000);
                    }
                }
            }));
        });
    </script>
</body>
</html>
